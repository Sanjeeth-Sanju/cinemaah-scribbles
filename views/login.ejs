    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/responsive.css">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Amarna:ital,wght@0,100..700;1,100..700&family=Amatic+SC:wght@400;700&family=Bebas+Neue&family=Dancing+Script:wght@400..700&family=Dosis:wght@200..800&family=Great+Vibes&family=Gruppo&family=Lexend+Exa:wght@100..900&family=Oswald:wght@200..700&family=Pacifico&family=Playwrite+AU+QLD:wght@100..400&family=Playwrite+NO:wght@100..400&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100..900;1,100..900&family=Saira:ital,wght@0,100..900;1,100..900&family=Shadows+Into+Light&family=Shojumaru&family=Source+Code+Pro:ital,wght@0,200..900;1,200..900&family=Spectral:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,200;1,300;1,400;1,500;1,600;1,700;1,800&family=Varela+Round&display=swap"
      rel="stylesheet">
  </head>
<body>

<div class="loginBody">
  <div class="login-box">
        <h1 class="loginh">Admin Login</h1>
        <% if (locals.errorMessage) { %>
            <p class="errorMessage">⚠️ <%= errorMessage %></p>
        <% } %>
        <form class = "loginform" id="loginForm" action="/login" method="POST">
            <input class="loginInputBox" type="password" name="password" placeholder="Enter password" required autocomplete="current-password">

        </form>
        <div class="loginBtnBox">
        <button type="submit" form = "loginForm" class="loginBtn">Login</button>
        <button type="button" class="backBtn" onclick="window.location.href='/'">Back</button>
        </div>
    </div>
  </body>
  </html>