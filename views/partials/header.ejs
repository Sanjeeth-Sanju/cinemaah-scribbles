        <div class="headerOthers">
          <div class="dropDownBox">
            <form action="/sort" method="GET" class="sortForm">
              <select name="sort" class="dropDown" onchange="this.form.submit()">
              <option value="">Sort by</option>
              <optgroup label="Year">
                <option value="year-desc">Newest First</option>
                <option value="year-asc">Oldest First</option>
              </optgroup>
              <optgroup label="Rating">
                <option value="rating-desc">Highest Rated</option>
                <option value="rating-asc">Lowest Rated</option>
              </optgroup>
              <optgroup label="Genre">
                <option value="genre-action">Action</option>
                <option value="genre-drama">Drama</option>
                <option value="genre-comedy">Comedy</option>
                <option value="genre-thriller">Thriller</option>
                <option value="genre-romance">Romance</option>
              </optgroup>
              <optgroup label="Language">
                <option value="lang-tamil">Tamil</option>
                <option value="lang-telugu">Telugu</option>
                <option value="lang-malayalam">Malayalam</option>
                <option value="lang-kanada">Kanada</option>
                <option value="lang-english">English</option>
              </optgroup>
              </select>
            </form>
  <% if (locals.session && session.loggedIn) { %>
